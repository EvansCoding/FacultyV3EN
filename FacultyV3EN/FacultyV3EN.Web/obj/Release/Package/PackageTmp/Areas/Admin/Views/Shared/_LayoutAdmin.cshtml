
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>FoET | Website Management</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Website K.KT-CN" name="description">
    <meta content="Coderthemes" name="author">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="shortcut icon" href="~/Content/Admin/assets/images/header/icons8_books.ico">

    @Styles.Render("~/css/Admin")
</head>
<body>
    <div id="wrapper">
        <div class="navbar-custom">
            <ul class="list-unstyled topnav-menu float-right mb-0">
                <li class="dropdown notification-list">
                    <a class="nav-link dropdown-toggle nav-user mr-0 waves-effect" href="@Url.Action("Index","Home", new { Area = String.Empty})" target="_blank">
                        <img src="~/Content/Admin/assets/images/header/internet_64px.png" alt="user-image" class="rounded-circle">
                        <span class="pro-user-name ">
                            To Website
                        </span>
                    </a>
                </li>
                <li class="dropdown notification-list">
                    <a class="nav-link dropdown-toggle nav-user mr-0 waves-effect" href="@Url.Action("LogOut","Login", new { Area = "Admin"})">
                        <img src="~/Content/Admin/assets/images/header/logout_rounded_64px.png" alt="user-image" class="rounded-circle">
                        <span class="pro-user-name ">
                            Logout
                        </span>
                    </a>
                </li>
            </ul>
            <div class="logo-box">
                <a href="@Url.Action("ProfileView","Profile", new { Area = "Admin"})" class="logo text-center logo-dark">
                    <span class="logo-lg">
                        <img src="~/Content/Admin/assets/images/header/log-dark.png" alt="" height="18">
                    </span>
                    <span class="logo-sm">
                        <img src="~/Content/Admin/assets/images/logokonen.png" alt="" height="22">
                    </span>
                </a>
                <a href="@Url.Action("ProfileView","Profile", new { Area = "Admin"})" class="logo text-center logo-light">
                    <span class="logo-lg">
                        <img src="~/Content/Admin/assets/images/header/logo.png" alt="" height="30">
                    </span>
                    <span class="logo-sm">
                        <img src="~/Content/Admin/assets/images/logokonen.png" alt="" height="22">
                    </span>
                </a>
            </div>
            <ul class="list-unstyled topnav-menu topnav-menu-left m-0">
                <li>
                    <button class="button-menu-mobile waves-effect">
                        <i class="mdi mdi-menu"></i>
                    </button>
                </li>
            </ul>
        </div>
        <div class="left-side-menu">
            <div class="slimscroll-menu">
                <div id="sidebar-menu">
                    <ul class="metismenu" id="side-menu">
                        <li>
                            <a class="waves-effect">
                                <i class="ion-md-speedometer"></i>
                                <span>  Settings </span>
                                <span class="menu-arrow"></span>
                            </a>
                            <ul class="nav-second-level" aria-expanded="false">
                                <li><a href="@Url.Action("ProfileView","Profile", new { Area = "Admin"})">Infor</a></li>
                                <li><a href="@Url.Action("ConfirgurationView","Confirguration", new { Area = "Admin"})">Confirguration</a></li>
                                <li><a href="@Url.Action("AccountView","Account", new { Area = "Admin"})">Account</a></li>
                                <li><a href="@Url.Action("StickyView","Sticky", new { Area = "Admin"})">Sticky</a></li>
                                <li><a href="@Url.Action("ContactView","Contact", new { Area = "Admin"})">Contact</a></li>
                                <li><a href="@Url.Action("BannerView","Banner", new { Area = "Admin"})">Banner</a></li>
                                <li><a href="@Url.Action("LecturerView","Lecturer", new { Area = "Admin"})">Lecturer</a></li>
                            </ul>
                        </li>
                        <li>
                            <a class="waves-effect">
                                <i class="ion-ios-apps"></i>
                                <span> Content </span>
                                <span class="menu-arrow"></span>
                            </a>
                            <ul class="nav-second-level" aria-expanded="false">
                                <li><a href="@Url.Action("CategoryView","Category", new { Area = "Admin"})">Category</a></li>
                                <li><a href="@Url.Action("PostView","Post", new { Area = "Admin"})">Post</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="content-page">
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/script/Admin")
    @if (IsSectionDefined("scripts"))
    {
        @RenderSection("scripts", false)
    }

    @Html.Partial("_GenericMessage")
</body>
</html>

