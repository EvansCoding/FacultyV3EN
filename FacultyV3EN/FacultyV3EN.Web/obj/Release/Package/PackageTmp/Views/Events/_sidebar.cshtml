@model List<FacultyV3EN.Core.Models.Entities.Events>
@using FacultyV3EN.Web.Common;

@if (Model != null)
{
    <div class="sidebar">
        <!-- Latest Posts -->
        <div class="sidebar_section">
            <div class="sidebar_section_title">
                <h3>Latest posts</h3>
            </div>
            <div class="latest_posts">
                <!-- Latest Post -->

                @foreach (var item in Model)
                {
                    <div class="latest_post">
                        <div class="latest_post_image">
                            <img src="@item.Url_Image" style="height: 220px" alt="...">
                        </div>
                        @{
                            var strTitle = item.Title.Count() <= 100 ? item.Title.Replace("-", " ") : item.Title.Substring(0, 100).Replace("-", " ");
                            var url = Url.RouteUrl("DETAILEVENTS", new { title = utf8Convert.Instance.ToUrlFriendly(strTitle), id = item.Id.ToString() });
                        }
                        <div class="latest_post_title"><a href="@url">@item.Title</a></div>
                        <div class="latest_post_meta">
                            <span class="latest_post_author"><a href="javascript:void(0)">By @item.Account.FullName</a></span>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
}

