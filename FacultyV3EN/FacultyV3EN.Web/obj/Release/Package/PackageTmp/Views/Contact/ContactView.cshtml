@model List<FacultyV3EN.Core.Models.Entities.Contact>
@{
    ViewBag.Title = "ContactView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/client/contact/css")

<div class="home">
    <div class="home_background_container prlx_parent">
        <div class="home_background prlx" style="background-image: url('/Content/Client/images/background/1920x1080_dai-hoc-dong-thap.jpg'); transform: translate(0%, -7.35993%) translate3d(0px, 0px, 0px);"></div>
    </div>
    <div class="home_content">
        <h1>Contact</h1>
    </div>
</div>

<div class="contact">
    <div class="container">

        <div class="row">
            <div class="col-lg-4">

                <div class="about">

                    <div class="about_title">Contact Information</div>
                    <div class="contact_info">
                        <ul>
                            <li class="contact_info_item">
                                <div class="contact_info_icon">
                                    <img src="~/Content/Client/images/icon/visit_50px.png" alt="...">
                                </div>
                                @Model[0].Meta_Value
                            </li>
                            <li class="contact_info_item">
                                <div class="contact_info_icon">
                                    <img src="~/Content/Client/images/icon/phonelink_ring_50px.png" alt="...">
                                </div>
                                @Model[3].Meta_Value
                            </li>
                            <li class="contact_info_item">
                                <div class="contact_info_icon">
                                    <img src="~/Content/Client/images/icon/mail_account_24px.png" alt="...">
                                </div>
                                @Model[1].Meta_Value
                            </li>
                        </ul>
                    </div>

                </div>
            </div>
            <div class="col-lg-8">
                <div id="google_map">
                    <div class="map_container">
                        <iframe style="height: 100%" src="@Model[2].Meta_Value" width="100%" height="auto" frameborder="0" style="border:0" allowfullscreen></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/client/contact/script")