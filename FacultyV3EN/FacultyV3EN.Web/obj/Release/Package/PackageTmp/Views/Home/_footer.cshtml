@model List<FacultyV3EN.Core.Models.Entities.Contact>

<footer class="footer">
    <div class="container">

        <!-- Footer Content -->

        <div class="footer_content">
            <div class="row">

                <!-- Footer Column - About -->
                <div class="col-lg-3 footer_col">

                    <!-- Logo -->
                    <div class="logo_container">
                        <div class="logo">
                            <img src="~/Content/Client/images/flag/logokonen.png" alt="">
                            <span>FoET</span>
                        </div>
                        <!-- <p>asdfasfas</p> -->
                    </div>
                </div>

                <!-- Footer Column - Menu -->

                <div class="col-lg-3 footer_col">
                    <div class="footer_column_title">Menu</div>
                    <div class="footer_column_content">
                        <ul>
                            <li class="footer_list_item"><a href="@Url.Action("Index","Home", new { Area = String.Empty})">Home</a></li>
                            <li class="footer_list_item"><a href="/about-us">About Us</a></li>
                            <li class="footer_list_item"><a href="/teachers">Teachers</a></li>
                            <li class="footer_list_item"><a href="/events">Events</a></li>
                            <li class="footer_list_item"><a href="/news">News</a></li>
                            <li class="footer_list_item"><a href="/contact">Contact</a></li>
                        </ul>
                    </div>
                </div>

                <!-- Footer Column - Usefull Links -->

                <div class="col-lg-3 footer_col">
                    <div class="footer_column_title">Admissions</div>
                    <div class="footer_column_content">
                        <ul>
                            <li class="footer_list_item"><a href="#">University Programs</a></li>
                            <li class="footer_list_item">
                                <a href="#">
                                    Masters programs
                                </a>
                            </li>

                        </ul>
                    </div>
                </div>

                <!-- Footer Column - Contact -->

                <div class="col-lg-3 footer_col">
                    <div class="footer_column_title">Contact</div>
                    <div class="footer_column_content">
                        <ul>
                            @{ 
                                var phone = "tel:" + Model[3].Meta_Value;
                                var email = "mailto:" + Model[1].Meta_Value;
                            }
                            <li class="footer_contact_item">
                                <div class="footer_contact_icon">
                                    <img src="~/Content/Client/images/icon/visit_50px.png" alt="...">
                                </div>
                    
                                    @Model[0].Meta_Value
                                
                            </li>
                            <li class="footer_contact_item">
                                <div class="footer_contact_icon">
                                    <img src="~/Content/Client/images/icon/phonelink_ring_50px.png" alt="...">
                                </div>
                                <a href="@phone" style="color: #a5a5a5;">
                                    @Model[3].Meta_Value
                                    </a>
                            </li>
                            <li class="footer_contact_item">
                                <div class="footer_contact_icon">
                                    <img src="~/Content/Client/images/icon/mail_account_24px.png" alt="...">
                                </div>
                                <a href="@email" style="color: #a5a5a5;">
                                    @Model[1].Meta_Value
                                </a>
                     
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>

        <!-- Footer Copyright -->

        @{ 
            Html.RenderAction("_sticky", "Home");
        }

    </div>
</footer>
