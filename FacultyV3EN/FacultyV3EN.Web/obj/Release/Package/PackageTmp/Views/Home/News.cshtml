@model   List<FacultyV3EN.Core.Models.Entities.Post>
@using FacultyV3EN.Web.Common;
<style>
    .text-overflow-string {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        /*width: 340px;*/
    }

</style>
<div class="popular page_section">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="section_title text-center">
                    <h1>
                        Lastest News
                    </h1>
                </div>
            </div>
        </div>

        <div class="row course_boxes">

            @foreach (var item in Model)
            {

                <!-- Popular Course Item -->
                <div class="col-lg-4 course_box">
                    <div class="card">
                        <img class="card-img-top" src="@item.Url_Image" height="220px" alt="#">
                        <div class="card-body text-center">
                            @{
                                var strTitle = item.Title.Count() <= 100 ? item.Title.Replace("-"," ") : item.Title.Substring(0, 100).Replace("-", " ");
                                var url = Url.RouteUrl("DETAILNEWS", new { title = utf8Convert.Instance.ToUrlFriendly(strTitle), id = item.Id.ToString(), category = utf8Convert.Instance.ToUrlFriendly(item.Category.Meta_Name) });
                                //var url = Url.Action("PostDetailView", "Post", new { id = item.Id });
                            }
                            <div class="card-title text-overflow-string"><a href="@url">@item.Title</a></div>
                            <div class="card-text text-overflow-string">@item.Description</div>
                        </div>
                        <div class="price_box d-flex flex-row align-items-center">
                            <div class="course_author_image">
                                <img src="@item.Account.Url_Image" width="46px" height="46px" alt="#">
                            </div>
                            <div class="course_author_name">@item.Account.FullName, <span>Author</span></div>
                            <!-- <div class="course_price d-flex flex-column align-items-center justify-content-center"><span>$29</span></div> -->
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</div>
