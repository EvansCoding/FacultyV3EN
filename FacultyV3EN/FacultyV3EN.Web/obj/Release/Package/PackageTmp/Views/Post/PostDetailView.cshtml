@model FacultyV3EN.Core.Models.Entities.Post
@{
    ViewBag.Title = "PostDetailView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/client/news_post/css")
@using FacultyV3EN.Core.Constants;
<div class="home">
    <div class="home_background_container prlx_parent">
        <div class="home_background prlx" style="background-image: url('/Content/Client/images/background/1920x1080_dai-hoc-dong-thap.jpg'); transform: translate(0%, -12.4533%) translate3d(0px, 0px, 0px);"></div>
    </div>
    <div class="home_content">
        @if (Model.Category.Meta_Name.Equals(Constant.CATEGORY_EVENTS))
        {
            <h1>The Events</h1>
        }
        else if (Model.Category.Meta_Name.Equals(Constant.CATEGORY_NEWS))
        {
            <h1>The News</h1>
        }
    </div>
</div>

<style>
    .news_post_text p {
        color: #000;
    }

    .news_post_text img {
        background-size: inherit;
        max-width: 100%;
        height: auto;
    }

    iframe {
        width: 100%;
        height: 100vh !important;
    }

    #videoFrame {
        height: 400px !important;
    }
</style>

<div class="news">
    <div class="container">
        <div class="row">

            <!-- News Post Column -->

            <div class="col-lg-8">

                <div class="news_post_container">
                    <!-- News Post -->
                    <div class="news_post">
                        <div class="news_post_image">
                            @if (!Model.Url_Video.Equals("#"))
                            {

                                var urlvideo = "https://www.youtube.com/embed/" + Model.Url_Video + "?rel=0&autoplay=1";

                                <iframe id="videoFrame" width="100%" height="312px" src="@urlvideo" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                            }
                            else
                            {
                                if (!Model.Url_Image.Equals("#"))
                                {
                                    <img src="@Model.Url_Image" alt="...">
                                }
                            }

                        </div>
                        <div class="news_post_top d-flex flex-column flex-sm-row">
                            <div class="news_post_date_container">
                                <div class="news_post_date d-flex flex-column align-items-center justify-content-center">
                                    <div>@Model.Update_At.Day</div>
                                    <div>@Model.Update_At.ToString("MMM")</div>
                                </div>
                            </div>
                            <div class="news_post_title_container">
                                <div class="news_post_title">
                                    <a href="#">@Model.Title</a>
                                </div>
                                <div class="news_post_meta">
                                    <span class="news_post_author"><a href="#">By @Model.Account.FullName</a></span>
                                </div>
                            </div>
                        </div>
                        @if (!Model.Url_LinkGoogle.Equals("#"))
                        {
                            <div class="news_post_text">
                                @Html.Raw(Model.Url_LinkGoogle)
                            </div>
                            <hr />
                        }

                        <div class="news_post_text">
                            @Html.Raw(Model.Content)
                        </div>

                    </div>

                </div>



            </div>

            <!-- Sidebar Column -->

            <div class="col-lg-4">
                @{
                    Html.RenderAction("_sidebar", "home", new { Area = String.Empty });
                }
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/client/news_post/script")