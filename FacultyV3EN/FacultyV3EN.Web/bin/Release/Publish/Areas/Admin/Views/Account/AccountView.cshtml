        function Delete(url) {
            swal({
                title: "Are you sure you want to delete?",
                text: "Data deleted will not be recoverable!",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((willDelete) => {

                if (willDelete) {
                    $.ajax({
                        type: "POST",
                        url: url,
                        success: function (data) {

                            if (data.success) {
                                var name = $("#search").val();
                                $("#tableAjax").load("@Url.Action("LoadTable", "Account")");

                                swal("Delete successful", {
                                    icon: "success",
                                });
                            } else {
                                $("#tableAjax").load("@Url.Action("LoadTable", "Account")");

                                swal("Delete failed", {
                                    icon: "error",
                                });
                            }
                        }
                    });
                }
                else {
                    swal("Data is still safe!");
                }
            });
        }
    </script>
}
