@model PagedList.IPagedList<FacultyV3EN.Core.Models.Entities.Events>

@{
    ViewBag.Title = "PostView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/client/news/css")

@using PagedList.Mvc;
@using FacultyV3EN.Core.Constants;
@using FacultyV3EN.Web.Common;

<style>
    a > .text-overflow-string {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
    
</style>
<div class="home">
    <div class="home_background_container prlx_parent">
        <div class="home_background prlx" style="background-image: url('/Content/Client/images/background/1920x1080_dai-hoc-dong-thap.jpg'); transform: translate(0%, -7.35993%) translate3d(0px, 0px, 0px);"></div>
    </div>
    <div class="home_content">
        <h1>The Events</h1>
    </div>
</div>

<div class="news">
    <div class="container">
        <div class="row">

            <!-- News Column -->

            <div class="col-lg-8">


                <div class="news_posts">
                    @foreach (var item in Model)
                    {
                        <!-- News Post -->
                        <div class="news_post">
                            <div class="news_post_image">
                                <img src="@item.Url_Image" width="100%" style="height: 420px" alt="...">
                            </div>
                            <div class="news_post_top d-flex flex-column flex-sm-row">
                                <div class="news_post_date_container">
                                    <div class="news_post_date d-flex flex-column align-items-center justify-content-center">
                                        <div>@item.DateOfEvents.Value.Day</div>
                                        <div>@item.DateOfEvents.Value.ToString("MMM")</div>
                                    </div>
                                </div>
                                <div class="news_post_title_container">
                                    <div class="news_post_title">
                                        @{
                                            var strTitle = item.Title.Count() <= 100 ? item.Title.Replace("-", " ") : item.Title.Substring(0, 100).Replace("-", " ");
                                            var url = Url.RouteUrl("DETAILEVENTS", new { title = utf8Convert.Instance.ToUrlFriendly(strTitle), id = item.Id.ToString() });
                                        }

                                        <a href="@url" class="text-overflow-string">@item.Title</a>


                                    </div>
                                    <div class="news_post_meta">
                                        <span class="news_post_author"><a href="#">By @item.Account.FullName</a></span>
                                    </div>
                                </div>
                            </div>
                            <div class="news_post_text">
                                <p style="text-align: justify">
                                    @item.Description
                                </p>
                            </div>
                            <div class="news_post_button text-center trans_200">
                                <a href="@url">Read More</a>
                            </div>
                        </div>
                    }
                </div>

                <!-- Page Nav -->
                <div class="news_page_nav">
                    <ul>

                        @Html.PagedListPager(Model, page => Url.Action("EventsView", "Events", new { Area = String.Empty, page }),
                        new PagedListRenderOptions
                        {
                            LiElementClasses = new string[] { "text-center trans_200" }
                        })
                    </ul>
                </div>
            </div>

            <!-- Sidebar Column -->

            <div class="col-lg-4">
                @{
                    Html.RenderAction("_sidebar", "events", new { Area = String.Empty });
                }
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/client/news/script")